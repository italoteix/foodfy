{% extends 'admin/layout.njk' %}

{% block content %}
  <section class="wrapper admin">
    <div class="title">
      <h1>Gerenciar chefs</h1>
      <button class="primary-button">
        <a href="/admin/chefs/create">Novo</a>
      </button>
    </div>

    <div class="chefs">
      {% for chef in chefs %}
        <div class="chef">
          <img src={{chef.avatar_url}} alt={{chef.name}}>
          <p>{{ chef.name }}</p>
          <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock content %}
