{% extends '_layouts/admin.njk' %}

{% block content %}
  <section class="title__row container">
    <h1 class="title">Chef: {{ chef.name }}</h1>
    <a href="/admin/chefs/{{ chef.id }}/edit">
      <button class="button button--primary">
        Editar chef
      </button>
    </a>
  </section>

  <section class="header--chef container">
    <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
    <h2>{{ chef.name }}</h2>
    <p>
      {% if chef.recipes_count < 1 %}Nenhuma receita cadastrada{% endif %}
      {{ chef.recipes_count }} receita{% if chef.recipes_count > 1 %}s{% endif %}
    </p>
  </section>

  <section class="container">
    <h3 class="title">Receitas</h3>

    {% include '_components/recipesGridx2.njk' %}

  </section>
{% endblock content %}
