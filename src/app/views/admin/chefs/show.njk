{% extends 'admin/layout.njk' %}

{% block content %}
<div class="wrapper recipe admin">
  <section class="title">
    <h1>Chef: {{ chef.name }}</h1>
    <button class="primary-button" type="button" >
      <a href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
    </button>
  </section>

  <section class="chef__header">
    <img src={{chef.avatar_url}} alt={{chef.name}}>
    <h2>{{ chef.name }}</h2>
    <p>
      {% if chef.recipes_count < 1 %}Nenhuma receita cadastrada{% endif %}
      {{ chef.recipes_count }} receita{% if chef.recipes_count > 1 %}s{% endif %}
    </p>
  </section>

  <section>
    <h3>Receitas</h3>
    <div class="recipes">
      {% for recipe in recipes %}
        <div class="recipe">
          <div class="img-wrapper">
            <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
          </div>
          <div class="content-wrapper">
            <h3>{{ recipe.title }}</h3>
            <p>por {{ chef.name }}</p>
            <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
</div>
{% endblock content %}
